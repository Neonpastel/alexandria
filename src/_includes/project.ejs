<%
%>

<input type="checkbox" id="<%=slug%>" class="project-checkbox">
<article>
    <h2><%=project.title%></h2>
    <p>(<%=project.type%>)</p>
    <p><%=project.subtitle%></p>

    <h3 class="sr-only">About</h3>
    <p><%=project.description%></p>
    <ul class="project-info">
        <%
        for (const [key, value] of Object.entries(project.info)) {
        %>
            <li>
                <%=key%>:
                <% if (!Array.isArray(value)) { %>
                <%=value%>
                <% } else {%>
                    <a href="<%=value[1]%>"><%=value[0]%></a>
                <%}%>
            </li>
        <%}%>
    </ul>
    <hr>
    <h3>Contributions</h3>
    <ul class="contributions">
        <%for (const [key, values] of Object.entries(project.contributions)) {%>
            <li>
                <h4><%=key%></h4>
                <ul class=>
                    <%for (let i=0; i < values.length; i++) {%>
                        <li><%=values[i]%></li>
                    <%}%>
                </ul>
            </li>
        <%}%>
    </ul>
</article>